@model List<MVC.Models.CategoriesView>

@{
    ViewBag.Title = "Categories";
}

<h2>@ViewBag.Title</h2>


<div class="row" style="text-align:right;padding:5px">
    <a href="~/Categories/NewCategory" class="btn btn-primary">New Category</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryID</td>
                    <td>@category.CategoryName</td>
                    <td>@category.Description</td>
                    <td>
                        <a class="btn btn-default" href="~/Categories/EditCategory/@category.CategoryID">Edit</a>
                        <a class="btn btn-danger" href="~/Categories/DeleteCategory/@category.CategoryID">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
